{
  "$id": "pass",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A representation of a model that has been extracted from code",
  "type": "object",
  "required": ["functions", "classes", "dependencies"],
  "properties": {
    "functions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/function"
      }
    },
    "classes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/class"
      }
    }
  },
  "definitions": {
    "function": {
      "type": "object",
      "properties": {
        "model_type": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "description": "The name of the function"
        },
        "global_id": {
          "type": "string",
          "description": "The location of the function in the global namespace"
        },
        "hash": {
          "type": "string",
          "description": "The md5 hash of the function body"
        },
        "parameters": {
          "type": "array",
          "description": "The parameters than can be passed to the function"
        },
        "body": {
          "type": "string",
          "description": "The body of the function"
        },
        "body_parsed": {
          "type": "array",
          "description": "The parsed body of the function"
        },
        "return_type": {
          "type": "string",
          "description": "The return type of the function"
        }
      },
      "required": ["model_type","global_id","hash"]
    },
    "class": {
      "type": "object",
      "properties": {
        "model_type": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "description": "The name of the class"
        },
        "global_id": {
          "type": "string"
        },
        "hash": {
          "type": "string"
        },
        "subclasses": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/class"
          }
        },
        "methods": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/function"
          }
        },
        "test": {
          "type": "string"
        }
      },
      "required": ["model_type", "name", "global_id", "hash", "subclasses", "methods"]
    }
  }
}